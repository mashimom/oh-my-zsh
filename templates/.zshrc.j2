# File generated by Ansible, CHANGES HERE MAY NOT PERSIST!!!

export ZSH=$HOME/.oh-my-zsh

## Theme
ZSH_THEME="{{ OHMYZSH_THEME }}"

## plugins
plugins=({{ OHMYZSH_PLUGINS|join(' ') }})

export PATH=$HOME/bin:/usr/local/bin:$PATH
export LANG=en_US.UTF-8
export LANGUAGE=en_US:en
export LC_ALL=en_US.UTF-8

source $ZSH/oh-my-zsh.sh

## aliases
alias prn="print -l $@"
alias fnd="realpath $@"
alias findjar="for f (**/*.jar(.)) jar -tf \"$f\" | grep --label \"$f\" -l `sed 's|\.|/|g' <<< \"$@\"`"
alias dcb="docker-compose build --force-rm --no-cache"
alias dcd="docker-compose down --volumes --remove-orphans"
alias dce="docker-compose exec $@"
alias dclo="docker-compose logs -t $@"
alias dcl="docker-compose pull $@"
alias dcu="docker-compose up -d --force-recreate --remove-orphans"
alias dcps="docker-compose ps"
alias dis="docker images"
alias xo="xdg-open $@ &"
